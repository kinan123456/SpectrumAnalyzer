<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.Activities.BluetoothActivity">
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Bluetooth Panel"
        android:textColor="#000000"
        android:textSize="25sp"
        android:typeface="monospace"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  "
            android:textSize="15sp"
            android:textColor="#000000"
            android:typeface="monospace"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-----------------------------------"
            android:textColor="#000000"
            android:typeface="monospace" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|  Bluetooth Status| "
            android:textColor="#000000"
            android:typeface="monospace"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bluetooth_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#000000"
            android:typeface="monospace" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#000000"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|-----------------------------------"
            android:textColor="#000000"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|  Socket    Status| "
            android:textColor="#000000"
            android:typeface="monospace"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/socket_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#000000"
            android:typeface="monospace" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="------------------------------------"
            android:textColor="#000000"
            android:typeface="monospace" />
    </LinearLayout>

    <ListView
        android:id="@+id/devices_list_view"
        android:layout_width="wrap_content"
        android:layout_height="291dp"
        android:choiceMode="singleChoice" />

    <Button
        android:id="@+id/paired_btn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Show paired Devices" />
    <Button
        android:id="@+id/turnOnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Bluetooth ON" />

</LinearLayout>