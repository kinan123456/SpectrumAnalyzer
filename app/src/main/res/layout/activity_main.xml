<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/graph_y_label"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="Amp.[-]"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sa_mode"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="|Mode: Idle |"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ctrl_mode"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="|HIVF: Idle |"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/freq_res"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="|dF: 3.9 [KHz]|"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/activity_main_linechart"
                android:layout_width="match_parent"
                android:layout_height="335dp" />

            <TextView
                android:id="@+id/graph_x_label"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Freq. [KHz]"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sample Rate             : 1.0  [MHz]"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" FFT/Sample Points : 256 [   #   ]"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Window Function    : Hamming"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Socket Status          : "
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/bluetooth_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="   "
                        android:textColor="#000000"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bluetoothButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10px"
            android:layout_weight="0.5"
            android:text="Bluetooth Panel" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_height="40dp"
            android:id="@+id/playPauseButton"
            android:layout_width="100dp"
            android:layout_margin="10px"
            android:layout_weight="0.5"
            android:text="Play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gainControl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10px"
            android:layout_weight="0.5"
            android:text="Enable Control" />

        <Button
            android:id="@+id/voltageTrack"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10px"
            android:layout_weight="0.5"
            android:text="Track Level" />
    </LinearLayout>

</FrameLayout>