<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/graph_y_label"
                    android:layout_width="278dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="Y Label" />

                <TextView
                    android:id="@+id/main_df_value"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="df = " />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/activity_main_linechart"
                android:layout_width="match_parent"
                android:layout_height="375dp" />

            <TextView
                android:id="@+id/graph_x_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="X Label" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Sample Rate    [Hz]     : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_settings_sample_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   FFT Points        [ # ]     : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_settings_fft_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Filter Status  [On/Off] : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/main_settings_design_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   " />
                </LinearLayout>

                <TextView
                    android:id="@+id/main_settings_design_filter_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/playPauseButton"
            android:layout_width="100dp"
            android:layout_margin="10px"
            android:layout_weight="0.5"
            android:text="Play" />
    </LinearLayout>
</FrameLayout>